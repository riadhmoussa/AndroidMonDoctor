<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.mondoctor.MedecinProfile">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layoutDirection="ltr"
        android:gravity="center"
        android:background="@color/whiteback"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/ChannelInfo"
            android:layoutDirection="rtl"
            android:background="@color/whitebackground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">
            <LinearLayout
                android:layout_marginBottom="2dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:background="@color/customeblue"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="4dp"
                android:paddingRight="5dp"
                android:paddingLeft="6dp">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@drawable/physician_head_doctor"
                    android:id="@+id/iv_channel_icon"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/txtPhone"
                    android:layout_weight="0" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:paddingTop="1dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="User name"

                        android:id="@+id/txtName"
                        android:layout_alignParentTop="true"
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:background="@color/customeblue"
                        android:layout_toLeftOf="@+id/webView2"
                        android:layout_toRightOf="@+id/bulogin"
                        android:layout_toEndOf="@+id/bulogin"
                        android:paddingBottom="1dp"
                        android:textSize="14dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="subscribers"
                        android:id="@+id/txtPhone"
                        android:layout_below="@+id/txtName"
                        android:gravity="right"
                        android:textAlignment="gravity"
                        android:layout_alignRight="@+id/txtName"
                        android:layout_alignEnd="@+id/txtName"
                        android:layout_alignBottom="@+id/bulogin"
                        android:layout_toRightOf="@+id/bulogin"
                        android:layout_toEndOf="@+id/bulogin"
                        android:background="@color/customeblue"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="8dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/white" />
                </LinearLayout>

                <Button
                    android:id="@+id/buRDV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="0"
                    android:background="@drawable/barcolor"
                    android:drawableRight="@drawable/add"
                    android:paddingRight="5dp"
                    android:text="Prendre RDV"
                    android:textColor="#fdfffa"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@color/whitebackground"
android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtVille"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/bulogin"
                        android:layout_toLeftOf="@+id/webView2"
                        android:layout_toRightOf="@+id/bulogin"
                        android:layout_weight="1"
                        android:background="@color/customeblue"
                        android:paddingBottom="1dp"
                        android:text="TextView"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/CodePostalMedecin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/bulogin"
                        android:layout_toLeftOf="@+id/webView2"
                        android:layout_toRightOf="@+id/bulogin"
                        android:layout_weight="1"
                        android:background="@color/customeblue"
                        android:paddingBottom="1dp"
                        android:text="TextView"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtAdresse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/bulogin"
                        android:layout_toLeftOf="@+id/webView2"
                        android:layout_toRightOf="@+id/bulogin"
                        android:layout_weight="1"
                        android:background="@color/customeblue"
                        android:paddingBottom="1dp"
                        android:textColor="@color/white"
                        android:text="TextView"
                        android:textSize="14dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
